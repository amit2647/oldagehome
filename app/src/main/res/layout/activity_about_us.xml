<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearone"
        >
        <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13pxh"
        android:layout_marginEnd="@dimen/_13pxh"
        android:layout_marginTop="@dimen/_20pxh"
        android:gravity="center_horizontal"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:id="@+id/linearRownavigationmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageNavigationMenu"
                android:layout_width="@dimen/_24pxh"
                android:layout_height="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_marginBottom="@dimen/_6pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription"
                tools:src="@drawable/img_arrowleft" />

            <TextView
                android:id="@+id/txtHeaderLabel"
                style="@style/txtLoraromansemibold24"
                android:layout_width="@dimen/_30pxh"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_77pxh"
                android:layout_weight="0.77"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="OLD AGE HOME"
                tools:text="@string/lbl_old_age_home" />


        </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearCard"
        style="@style/groupStyleamber_100cornerRadius"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_700pxh"
        android:layout_marginStart="@dimen/_20pxh"
        android:layout_marginTop="@dimen/_141pxv"
        android:layout_marginEnd="@dimen/_20pxh"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtProductName"
            style="@style/txtLoraromansemibold24_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_33pxh"
            android:layout_marginTop="@dimen/_32pxv"
            android:layout_marginEnd="@dimen/_33pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="About Us"
             />

        <TextView
            android:id="@+id/txtDescription"
            style="@style/txtIntermedium14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_33pxh"
            android:layout_marginTop="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_33pxh"
            android:gravity="center_horizontal"
            android:text="Embracing Wisdom, Nurturing Care: Building a Home for Aging Hearts"
            />

    </LinearLayout>
</RelativeLayout>